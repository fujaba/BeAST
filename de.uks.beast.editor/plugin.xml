<?xml version="1.0" encoding="UTF-8"?>
<plugin>

	<extension point="org.eclipse.ui.popupMenus"> 
	    <objectContribution
	      adaptable="true"
	      id="de.uks.beast.editor.popup"
	      nameFilter="*.diagram"
	      objectClass="org.eclipse.core.resources.IFile">
	      <action
	         id="de.uks.beast.editor.beastAction" 
	         label="Execute BeAST test..."
	         menubarPath="additions"
	         class="de.uks.beast.editor.action.BeASTAction"> 
	      </action>
	    </objectContribution>
	</extension>

	<extension
         point="org.eclipse.graphiti.ui.diagramTypes">
		<diagramType name="Editor Diagram Type" type="hardwareComposition" id="de.uks.beast.editor.editorDiagramType">
		</diagramType>
	</extension>
	<extension
         point="org.eclipse.graphiti.ui.diagramTypeProviders">
		<diagramTypeProvider name="Editor Diagram Type Provider" class="de.uks.beast.editor.provider.EditorDiagramTypeProvider"
			id="de.uks.beast.editor.editorDiagramTypeProvider">
			<diagramType
               id="de.uks.beast.editor.editorDiagramType">
			</diagramType>
			
		</diagramTypeProvider>
	</extension>
	
	
	<extension 
		point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
		<propertyContributor contributorId="hardwareComposition.PropertyContributor">
			<propertyCategory category="Configuration">
			</propertyCategory>
		</propertyContributor>
	</extension>
	
	
	
	<extension
      point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
		<propertyTabs
          contributorId="hardwareComposition.PropertyContributor">
			<propertyTab category="Configuration" id="graphiti.main.tab.server" label="Config">
			</propertyTab>
		</propertyTabs>
	</extension>
	<extension
      point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
		<propertyTabs
          contributorId="hardwareComposition.PropertyContributor">
			<propertyTab category="Configuration" id="graphiti.main.tab.network" label="Config">
			</propertyTab>
		</propertyTabs>
	</extension>
	<extension
      point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
		<propertyTabs
          contributorId="hardwareComposition.PropertyContributor">
			<propertyTab category="Configuration" id="graphiti.main.tab.router" label="Config">
			</propertyTab>
		</propertyTabs>
	</extension>
	
	
	
	<extension 
		point="org.eclipse.ui.views.properties.tabbed.propertySections">
		<propertySections
          contributorId="hardwareComposition.PropertyContributor">
			<propertySection class="de.uks.beast.editor.properties.section.ServerPropertySection"
				filter="de.uks.beast.editor.properties.filter.ServerPropertyFilter"
				id="graphiti.main.tab.server" tab="graphiti.main.tab.server">
			</propertySection>
		</propertySections>
	</extension>
	<extension 
		point="org.eclipse.ui.views.properties.tabbed.propertySections">
		<propertySections
          contributorId="hardwareComposition.PropertyContributor">
			<propertySection class="de.uks.beast.editor.properties.section.RouterPropertySection"
				filter="de.uks.beast.editor.properties.filter.RouterPropertyFilter"
				id="graphiti.main.tab.router" tab="graphiti.main.tab.router">
			</propertySection>
		</propertySections>
	</extension>
	<extension 
		point="org.eclipse.ui.views.properties.tabbed.propertySections">
		<propertySections
          contributorId="hardwareComposition.PropertyContributor">
			<propertySection class="de.uks.beast.editor.properties.section.NetworkPropertySection"
				filter="de.uks.beast.editor.properties.filter.NetworkPropertyFilter"
				id="graphiti.main.tab.network" tab="graphiti.main.tab.network">
			</propertySection>
		</propertySections>
	</extension>
 <extension
       point="org.eclipse.ui.newWizards">
    <category
          id="de.uks.beast.editor"
          name="Hardware Composition Diagram">
    </category>
    <wizard
          category="de.uks.beast.editor"
          class="de.uks.beast.editor.wizard.HCDWizard"
          icon="icons/sample.gif"
          id="de.uks.beast.editor.wizard.HCDWizard"
          name="HCD Diagram file">
    </wizard>
 </extension>
 
